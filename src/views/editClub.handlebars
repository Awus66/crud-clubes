<div class="container justify-content-center pb-3 mb-3 text-center">
    <form action="/clubs/{{club.id}}/edit" id="edit-form" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="name" class="form-label tag">Club Name</label>
            <input type="text" id="name" name="name" class="form-control" maxlength="60" required>
        </div>
        <div class="mb-3">
            <label for="name" class="form-label tag">Short Name</label>
            <input type="text" id="shortName" name="shortName" class="form-control" maxlength="60" required>
        </div>
        <div class="mb-3">
            <label for="tla" class="form-label tag">TLA</label>
            <input type="text" class="form-control" id="tla" name="tla" maxlength="3" pattern="[A-Za-z]{3}" required>
        </div>
        <div class="mb-3">
            <label for="venue" class="form-label tag">Stadium</label>
            <input type="text" class="form-control" id="venue" name="venue" maxlength="60" required>
        </div>
        <div class="mb-3">
            <label for="address" class="form-label tag">Address</label>
            <input type="text" class="form-control" id="address" name="address" maxlength="200" required>
        </div>
        <div class="mb-3">
            <label for="website" class="form-label tag">Website</label>
            <input type="text" id="website" name="website" class="form-control" maxlength="60">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label tag">Email</label>
            <input type="text" id="email" name="email" class="form-control" maxlength="60" required>
        </div>
        <div class="mb-3">
            <label for="founded" class="form-label tag">Founded</label>
            <input type="number" id="founded" name="founded" class="form-control" maxlength="4">
        </div>
        <div class="mb-3">
            <label for="logo" class="form-label tag">Current Logo</label>
            
            <div class="mb-3">
                <img src="{{club.crestUrl}}" alt="Current Logo" style="max-width: 150px; max-height: 150px;">
            </div>
            <label for="logo" class="form-label tag">New Logo</label>
            <input type="file" class="form-control" id="logo" name="logo" accept="image/*">
            <input type="hidden" name="currentLogo" value="{{club.crestUrl}}">
        </div>
        <button type="submit" class="btn btn-success">Save Club</button>
    </form>
</div>
